<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".activities.HomeActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/activity_post_list_user_details"
        android:layout_margin="@dimen/small_spacing"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tileColor"
            android:gravity="center"
            android:padding="@dimen/small_spacing"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/activity_main_img_content_desc"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/activity_post_list_tv_roll_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_roll_num_label" />

            <TextView
                android:id="@+id/activity_post_list_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_name_label" />

            <TextView
                android:id="@+id/activity_post_list_tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_email_label" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_post_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/activity_post_list_progress_bar"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center" />
</LinearLayout>