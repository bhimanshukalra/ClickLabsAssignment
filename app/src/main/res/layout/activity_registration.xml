<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_scroll_view"
    style="@style/ScrollView"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/LinearLayoutVerticalWeightOne"
            android:layout_marginBottom="@dimen/small_spacing"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/activity_registration_img_btn_back"
                style="@style/WrapContentWrapContent"
                android:layout_marginBottom="@dimen/small_spacing"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back" />

            <TextView
                style="@style/ActivityRegistrationTv"
                android:layout_marginBottom="@dimen/small_spacing"
                android:text="@string/welcome_comma"
                android:textSize="@dimen/standard_text_size" />

            <TextView
                style="@style/ActivityRegistrationTv"
                android:text="@string/please_provide_your_basic_information"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/small_spacing"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/activity_registration_et_full_name"
                style="@style/ActivityRegistrationEtRestrictedInput"
                android:hint="@string/full_name"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/activity_registration_et_gender"
                style="@style/ActivityRegistrationEtRestrictedInput"
                android:hint="@string/gender"
                android:inputType="textCapSentences" />

            <EditText
                android:id="@+id/activity_registration_et_user_type"
                style="@style/ActivityRegistrationEtRestrictedInput"
                android:inputType="textCapWords"
                android:hint="@string/user_type" />

            <EditText
                android:id="@+id/activity_registration_et_occupation"
                style="@style/ActivityRegistrationEtRestrictedInput"
                android:inputType="textCapWords"
                android:hint="@string/occupation" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/activity_registration_tv_different_account"
                style="@style/ActivityRegistrationTv"
                android:layout_gravity="center"
                android:text="@string/signup_with_different_account" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_registration_btn_cont"
            style="@style/WidthMatchParentHeightWrapContent"
            android:background="@drawable/btn_black_border"
            android:text="@string/cont" />

    </LinearLayout>
</ScrollView>