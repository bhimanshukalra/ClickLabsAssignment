<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_spacing">

        <ImageView
            android:layout_width="0dp"
            android:id="@+id/item_user_img_user"
            android:src="@drawable/user"
            android:layout_weight="1"
            android:contentDescription="@string/activity_main_img_content_desc"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/item_user_tv_center"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content"
            tools:text="@string/tv_name_label" />
        <TextView
            android:id="@+id/item_user_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="@string/tv_roll_num_label" />

    </LinearLayout>
</android.support.v7.widget.CardView>