<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/globalTextViewStyle</item>
        <item name="android:buttonStyle">@style/globalBtnStyle</item>
    </style>
    <style name="globalTextViewStyle">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <style name="globalBtnStyle">
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/lighterBackgroundColor</item>
        <item name="android:keyTextSize">40sp</item>
        <item name="android:textColorPrimary">@color/lightTextColor</item>
    </style>

</resources>
