<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:padding="@dimen/extra_small_spacing">

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_student_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name" />

        <TextView
            android:id="@+id/item_student_tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Class" />

        <TextView
            android:id="@+id/item_student_tv_roll_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Roll no" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_student_tv_edit"
            android:text="@string/item_student_tv_edit" />

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/item_student_tv_delete"
            android:layout_height="wrap_content"
            android:text="@string/item_student_tv_delete" />
    </LinearLayout>


</LinearLayout>
